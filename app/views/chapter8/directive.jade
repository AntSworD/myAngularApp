doctype
html(ng-app='myApp')
  head
    title Scope
    script(
      src="http://cdn.bootcss.com/angular.js/1.2.0rc3/angular.js")
  body
    div(my-directive
        my-url="http://google.com"
        my-link-text="Click me to go to Google")
    script.
      angular.module('myApp', [])
      .directive('myDirective', function() {
        return {
          restrict: 'A',
          replace: true,
          scope: {
            myUrl: '@',
            myLinkText: '@'
          },
          template: '<a href= "{{ myUrl }}">' +
                    '{{ myLinkText }}</a>'
        };
      });
