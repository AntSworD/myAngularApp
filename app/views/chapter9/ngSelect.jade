doctype
html(ng-app='myApp')
  head
    title ngSelect
    script(
      src="http://cdn.bootcss.com/angular.js/1.2.0rc3/angular.js")
  body
    div(ng-controller="CityController")
      select(ng-model="city"
             ng-options="city.name for city in cities")
        option(value="") Choose City
      | Best City: {{ city.name }}

    script.
      angular.module('myApp', [])
      .controller('CityController', function($scope) {
        $scope.cities = [
          {name: 'Seattle'},
          {name: 'San Francisco'},
          {name: 'Chicago'},
          {name: 'New York'},
          {name: 'Boston'}
        ];
      });
